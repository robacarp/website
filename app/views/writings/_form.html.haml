%h1 Write something
= form_for @writing do |f|
  = f.label :title
  = f.text_field :title
  %br
  = f.label :date
  = f.datetime_select :date
  %br
  = f.label :user, 'Author'
  = f.collection_select :user_id, User.all, :id, :name
  %br
  = f.label :content
  %br
  = f.text_area :content
  %br
  = f.check_box :draft
  = f.label :draft
  %br
  = f.check_box :hidden
  = f.label :hidden
  %br
  = f.submit "Save"
