<table>
<% for user in @users %>
	<tr>
		<td><%= user.login %></td>
		<td><%= user.email %></td>
		<td><%= user.is_guest? ? "G" : user.is_admin? ? "A" : "U" %></td>
		<td><%= link_to 'D', user, :confirm=>"Are you sure you want to delete user #{user.login}?", :method=>:delete %></td>
	</tr>
<% end %>

